{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 14,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "cmake-pedantic",
      "hidden": true,
      "warnings": {
        "dev": true,
        "deprecated": true,
        "uninitialized": true,
        "unusedCli": true,
        "systemVars": false
      },
      "errors": {
        "dev": true,
        "deprecated": true
      }
    },
    {
      "name": "dev-mode",
      "hidden": true,
      "inherits": "cmake-pedantic",
      "cacheVariables": {
        "JEngine-Reformed_DEVELOPER_MODE": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "conan",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/conan/conan_toolchain.cmake",
        "CMAKE_POLICY_DEFAULT_CMP0091": "NEW"
      }
    },
    {
      "name": "cppcheck",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CPPCHECK": "cppcheck;--enable=all;--suppress=internalAstError;--suppress=missingIncludeSystem;--suppress=unmatchedSuppression;--inline-suppr;--inconclusive;--platform=native;--error-exitcode=1"
      }
    },
    {
      "name": "clang-tidy",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_CLANG_TIDY": "clang-tidy;--header-filter=^${sourceDir}/;-extra-arg=-Wno-unknown-warning-option;-extra-arg=-Wno-unused-command-line-argument"
      }
    },
    {
      "name": "Ccache",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_COMPILER_LAUNCHER": "ccache"
      }
    },
    {
      "name": "iwyu",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_INCLUDE_WHAT_YOU_USE": "include-what-you-use;-Xiwyu;--cxx17ns;-Xiwyu;--error=4;-Xiwyu;--no_comments;-Wno-unknown-warning-option;-Wno-unused-command-line-argument"
      }
    },
    {
      "name": "ci-std",
      "description": "This preset makes sure the project actually builds with at least the specified standard",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_CXX_STANDARD": "20",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON"
      }
    },
    {
      "name": "flags-linux",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fstack-protector-strong -fcf-protection=full -Wall -Wextra -Wpedantic -Wconversion -Wsign-conversion -Wcast-qual -Wformat=2 -Wundef -Werror=float-equal -Wshadow -Wcast-align -Wunused -Wnull-dereference -Wdouble-promotion -Wimplicit-fallthrough -Wextra-semi -Woverloaded-virtual -Wnon-virtual-dtor -Wold-style-cast -Wmisleading-indentation -Wduplicated-cond -Wduplicated-branches -Wlogical-op -Wuseless-cast -Werror",
        "CMAKE_EXE_LINKER_FLAGS": "-Wl,--allow-shlib-undefined,--as-needed",
        "CMAKE_SHARED_LINKER_FLAGS": "-Wl,--allow-shlib-undefined,--as-needed"
      }
    },
    {
      "name": "flags-darwin",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-fstack-protector-strong -fcf-protection=full -Wall -Wextra -Wpedantic -Wconversion -Wsign-conversion -Wcast-qual -Wformat=2 -Wundef -Werror=float-equal -Wshadow -Wcast-align -Wunused -Wnull-dereference -Wdouble-promotion -Wimplicit-fallthrough -Wextra-semi -Woverloaded-virtual -Wnon-virtual-dtor -Wold-style-cast"
      }
    },
    {
      "name": "flags-windows",
      "description": "Note that all the flags after /W4 are required for MSVC to conform to the language standard",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "/sdl /analyze /analyze:external- /guard:cf /utf-8 /w14640 /w14826 /w14619 /w14311 /w14296 /we4289 /w14287 /w14265 /w14263 /w14242 /w14254 /w14165 /w44242 /w44254 /w44263 /w34265 /w34287 /w44296 /w44365 /w44388 /w44464 /w14545 /w14546 /w14547 /w14549 /w14555 /w34619 /w34640 /w24826 /w14905 /w14906 /w14928 /w45038 /W4 /permissive- /volatile:iso /Zc:preprocessor /Zc:__cplusplus /Zc:externConstexpr /Zc:throwingNew /EHsc /WX",
        "CMAKE_EXE_LINKER_FLAGS": "/machine:x64 /guard:cf"
      }
    },
    {
      "name": "ci-linux",
      "generator": "Ninja",
      "hidden": true,
      "inherits": [
        "flags-linux",
        "ci-std"
      ]
    },
    {
      "name": "ci-darwin",
      "generator": "Ninja",
      "hidden": true,
      "inherits": [
        "flags-darwin",
        "ci-std"
      ]
    },
    {
      "name": "ci-win64",
      "inherits": [
        "flags-windows",
        "ci-std"
      ],
      "generator": "Visual Studio 17 2022",
      "architecture": "x64",
      "hidden": true
    },
    {
      "name": "coverage-linux",
      "binaryDir": "${sourceDir}/build/coverage",
      "inherits": "ci-linux",
      "hidden": true,
      "cacheVariables": {
        "ENABLE_COVERAGE": "ON",
        "CMAKE_BUILD_TYPE": "Coverage",
        "CMAKE_CXX_FLAGS_COVERAGE": "-Og -g --coverage -fkeep-inline-functions -fkeep-static-functions",
        "CMAKE_EXE_LINKER_FLAGS_COVERAGE": "--coverage",
        "CMAKE_SHARED_LINKER_FLAGS_COVERAGE": "--coverage",
        "CMAKE_MAP_IMPORTED_CONFIG_COVERAGE": "Coverage;Release;RelWithDebInfo;Debug;"
      }
    },
    {
      "name": "ci-coverage",
      "inherits": [
        "coverage-linux",
        "dev-mode",
        "conan"
      ],
      "cacheVariables": {
        "COVERAGE_HTML_COMMAND": ""
      }
    },
    {
      "name": "ci-sanitize",
      "binaryDir": "${sourceDir}/build/sanitize",
      "inherits": [
        "ci-linux",
        "dev-mode",
        "conan"
      ],
      "cacheVariables": {
        "ENABLE_SANITIZERS": "True",
        "CMAKE_MAP_IMPORTED_CONFIG_DEBUG": "Release;RelWithDebInfo;Debug;"
      }
    },
    {
      "name": "ci-build",
      "binaryDir": "${sourceDir}/build",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_MAP_IMPORTED_CONFIG_DEBUG": "Release;RelWithDebInfo;Debug;"
      }
    },
    {
      "name": "ci-macos",
      "inherits": [
        "ci-build",
        "ci-darwin",
        "dev-mode",
        "conan"
      ]
    },
    {
      "name": "ci-ubuntu",
      "inherits": [
        "ci-build",
        "ci-linux",
        "clang-tidy",
        "cppcheck",
        "dev-mode",
        "conan"
      ]
    },
    {
      "name": "ci-ubuntu-noanalysis",
      "inherits": [
        "ci-build",
        "ci-linux",
        "dev-mode",
        "conan"
      ]
    },
    {
      "name": "ci-windows",
      "inherits": [
        "ci-build",
        "ci-win64",
        "dev-mode",
        "conan"
      ]
    },
    {
      "name": "ci-windows-msys",
      "inherits": [
        "ci-build",
        "ci-linux",
        "dev-mode",
        "clang-tidy",
        "cppcheck",
        "iwyu",
        "conan"
      ]
    }
  ]
}